doctype html
html(lang='en')
  head
    link#bootstrap-css(href='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css' rel='stylesheet')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')
    script(src='//code.jquery.com/jquery-1.11.1.min.js')
    link(rel='stylesheet' href='/stylesheets/login.css')
  body
    .sidenav
      img(src='/images/VASP_SOLID.png' alt='VASP SOLID' width='468.33' height='300' style='margin-left: 23%')
      .login-main-text
        
        h2(style='font-family:Newspaper; margin-left:5%')
          br
          |  Authentication Page
        p(style='margin-left:5%') Login or register from here to access VASP.
       
    .main
      .col-md-6.col-sm-12
        br

        .login-form(style='margin-top: 70px')
          form(method="POST")
            .form-group
              label Username:
              input.form-control(type='text' placeholder='Username' id='username' name='username')
            .form-group
              label Email:
              input.form-control(type='text' placeholder='Email' id='email' name='email')
            .form-group
              label Password:
              input.form-control(type='password' placeholder='Password' id='password' name='password')
            .form-group
              label Age:
              input.form-control(type='text' placeholder='Age' id='age' name='age')
            .form-group
              label Weight:
              input.form-control(type='text' placeholder='Weight' id='weight' name='weight')
            .form-group
              label Height:
              input.form-control(type='text' placeholder='Height' id='height' name='height')
              .form-group
              label Address:
              input.form-control(type='text' placeholder='Address' id='height' name='address')
            .form-group
              label Gender:
              input.form-control(type='text' placeholder='Gender' style='margin-bottom: 30px' id='gender' name='gender')
            button.btn.btn-black(type='submit' style='font-family:libraryFont') Register
            <br>
            <br>